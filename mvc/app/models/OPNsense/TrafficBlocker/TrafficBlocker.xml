<model>
    <mount>//OPNsense/trafficblocker</mount>
    <description>
       Plugin that blocks traffic if host is not connected
    </description>
    <items>
        <general>
            <Enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </Enabled>
            <Ip type="NetworkField">
                <default>192.168.1.1</default>
                <Required>Y</Required>
                <ValidationMessage>please specify a valid ip</ValidationMessage>
            </Ip>
        </general>
    </items>
</model>